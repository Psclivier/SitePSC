{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <br>
    <br>
    <div class="table-wrapper">
        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Message</th>
                <th>Email</th>
            </tr>
            </thead>
            {% for message in messages %}
                <tbody>
                <tr>
                    <td>{{ message.name }}</td>
                    <td>{{ message.content }}</td>
                    <td>{{ message.email }}</td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}